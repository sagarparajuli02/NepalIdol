<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.hamro.nepalidol.Home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/small" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Mero Nepal Idol"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:paddingTop="15dp"
                android:text="Your all in one nepal idol app."
                android:textColor="#FFF"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Vote Your Favroite Contestant"
        android:textColor="@color/accent_material_light"
        android:textSize="25dp" />
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/spinner"
        android:layout_gravity="center"
        android:hint="Select Any One"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal"
        />
    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textSize="25dp"
        android:textColor="#FFF"
        android:background="@drawable/round_bunntons"
        android:text="Send Now" />


</LinearLayout>
